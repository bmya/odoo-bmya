<odoo>
    <record model="ir.ui.view" id="view_company_city_inherit_form">
        <field name="name">res.company.city.form.inherit</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <field name="street2" position="after">
                <field name="city_id" domain="[('country_id', '=', country_id)]" placeholder="Comuna" style="width: 100%" options='{"no_create": True}' attrs="{'invisible': [('country_id', '!=', %(base.cl)d)]}"/>
                <field name="real_city" attrs="{'readonly': [('country_id', '=', %(base.cl)d)], 'invisible': [('state_id', '!=', %(base.state_cl_13)d)]}"/><br />
            </field>
            <field name="city" position="attributes">
                <attribute name="attrs">{'invisible': [('country_id', '=', %(base.cl)d)]}</attribute>
            </field>
            <field name="state_id" position="attributes">
                <attribute name="attrs">{'readonly': [('country_id', '=', %(base.cl)d)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
